@model Vidli.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "ShowMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Movies.Count == 0)
{
    <p>There are no movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "ShowMovieDetails", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre</td>
            </tr>
        }
        </tbody>
    </table>
}

